// NS2

controls { /* empty */ };

options {
	query-source address 10.53.0.2;
	notify-source 10.53.0.2;
	transfer-source 10.53.0.2;
	port @PORT@;
	pid-file "named.pid";
	listen-on { 10.53.0.2; };
	listen-on-v6 { none; };
	recursion no;
	notify yes;
	dnssec-validation yes;
};

zone "." {
	type hint;
	file "../../common/root.hint";
};

zone "good" {
	type primary;
	file "good.db.signed";
};

zone "bad" {
	type primary;
	file "bad.db.signed";
};

include "trusted.conf";
