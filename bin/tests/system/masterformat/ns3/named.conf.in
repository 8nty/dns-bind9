// NS3

options {
	pid-file "named.pid";
	listen-on port @PORT@ { 10.53.0.3; };
	port @PORT@;
	listen-on-v6 { none; };
	recursion no;
	notify no;
};

key rndc_key {
	secret "1234abcd8765";
	algorithm hmac-sha256;
};

controls {
	inet 10.53.0.3 port @CONTROLPORT@ allow { any; } keys { rndc_key; };
};

zone "example" {
	type primary;
	masterfile-format map;
	file "example.db.map";
};

zone "dynamic" {
	type primary;
	masterfile-format map;
	file "dynamic.db.map";
	allow-update { any; };
};
