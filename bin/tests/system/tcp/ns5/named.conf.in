// NS5

key rndc_key {
	secret "1234abcd8765";
	algorithm hmac-sha256;
};

controls {
	inet 10.53.0.5 port @CONTROLPORT@ allow { any; } keys { rndc_key; };
};


options {
	query-source address 10.53.0.5;
	notify-source 10.53.0.5;
	transfer-source 10.53.0.5;
	port @PORT@;
	directory ".";
	pid-file "named.pid";
	listen-on { 10.53.0.5; };
	listen-on-v6 { none; };
        tcp-listen-queue 32;
	recursion yes;
	notify yes;
        tcp-clients 17;
	dnssec-validation no;
};

zone "." {
	type hint;
	file "../../common/root.hint";
};
