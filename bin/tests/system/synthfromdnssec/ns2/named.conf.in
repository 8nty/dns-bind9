// NS2

options {
	query-source address 10.53.0.2;
	notify-source 10.53.0.2;
	transfer-source 10.53.0.2;
	port @PORT@;
	pid-file "named.pid";
	listen-on { 10.53.0.2; };
	listen-on-v6 { none; };
	recursion yes;
	notify no;
	dnssec-validation yes;
};

zone "." {
	type hint;
	file "root.hints";
};

include "../ns1/trusted.conf";
