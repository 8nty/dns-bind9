// NS6

include "../../common/rndc.key";

controls {
	inet 10.53.0.6 port @CONTROLPORT@ allow { any; } keys { rndc_key; };
};

options {
	query-source address 10.53.0.6;
	notify-source 10.53.0.6;
	transfer-source 10.53.0.6;
	port @PORT@;
	pid-file "named.pid";
	listen-on { 10.53.0.6; };
	listen-on-v6 { none; };
	recursion yes;
	notify yes;
	notify-delay 0;
};

zone "." {
	type hint;
	file "../../common/root.hint";
};

include "trusted.conf";
