options {
	query-source address 10.53.0.3;
	notify-source 10.53.0.3;
	transfer-source 10.53.0.3;
	port @PORT@;
	pid-file "named.pid";
	listen-on { 10.53.0.3; };
	listen-on-v6 { none; };
	recursion yes;
	notify yes;
	minimal-responses no;
};

zone "." {
	type hint;
	file "../../common/root.hint";
};

zone "example" {
	type primary;
	file "example.db";
};

zone "child.example" {
	type stub;
	file "child.example.st";
	primaries { 10.53.0.2; };
};
