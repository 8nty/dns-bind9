options {
	query-source address 10.53.0.1;
	notify-source 10.53.0.1;
	transfer-source 10.53.0.1;
	port @PORT@;
	pid-file "named.pid";
	listen-on { 10.53.0.1; };
	listen-on-v6 { none; };
	recursion no;
	dnssec-validation no;
	notify yes;
};

statistics-channels {
	inet 10.53.0.1 port @EXTRAPORT1@ allow { any; };
};

zone "." {
	type primary;
	file "root.db";
};

zone "example.info." {
	type primary;
	file "example-info.db";
};

zone "32/1.0.0.127-in-addr.example." {
	type primary;
	file "zone.db";
};
