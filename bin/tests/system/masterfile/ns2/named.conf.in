// NS2

options {
	query-source address 10.53.0.2;
	notify-source 10.53.0.2;
	transfer-source 10.53.0.2;
	port @PORT@;
	pid-file "named.pid";
	listen-on { 10.53.0.2; };
	listen-on-v6 { none; };
	recursion no;
	notify yes;
	dnssec-validation yes;
};

zone "." {
	type hint;
	file "../../common/root.hint";
};

zone "example" {
	type primary;
	file "example.db";
};

zone "missing" {
	type primary;
	file "missing.db";
};
