key rndc_key {
	secret "1234abcd8765";
	algorithm hmac-sha256;
};

controls {
	inet 10.53.0.1 port @CONTROLPORT@ allow { any; } keys { rndc_key; };
};

options {
	query-source address 10.53.0.1;
	notify-source 10.53.0.1;
	transfer-source 10.53.0.1;
	port @PORT@;
	pid-file "named.pid";
	listen-on { 10.53.0.1; };
	listen-on-v6 { none; };
	recursion no;
	check-integrity no;
};

zone "." {
	type hint;
	file "../../common/root.hint";
};

zone "min-example" {
	type primary;
	file "min-example.db";
};

zone "max-example" {
	type primary;
	file "max-example.db";
};
