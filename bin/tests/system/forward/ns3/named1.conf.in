options {
	query-source address 10.53.0.3;
	notify-source 10.53.0.3;
	transfer-source 10.53.0.3;
	port @PORT@;
	pid-file "named.pid";
	listen-on { 10.53.0.3; };
	listen-on-v6 { none; };
	forwarders { 10.53.0.2; };
	forward first;
	dnssec-validation yes;
};

key rndc_key {
	secret "1234abcd8765";
	algorithm hmac-sha256;
};

controls {
	inet 10.53.0.3 port @CONTROLPORT@ allow { any; } keys { rndc_key; };
};

zone "." {
	type hint;
	file "root.db";
};

zone "example1." {
	type forward;
	forward first;
	forwarders { 10.53.0.2; };
};

zone "example2." {
	type forward;
	forward first;
	forwarders { };
};

zone "example3." {
	type forward;
	forward only;
	forwarders { };
};

zone "example7." {
	type forward;
	forward first;
	forwarders { 10.53.0.6; };
};
