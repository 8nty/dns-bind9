controls { /* empty */ };

options {
	query-source address 10.53.0.3;
	notify-source 10.53.0.3;
	transfer-source 10.53.0.3;
	port @PORT@;
	pid-file "named.pid";
	listen-on { 10.53.0.3; };
	listen-on-v6 { none; };
	recursion yes;
	dnssec-validation yes;
	minimal-responses no;
};

zone "." {
	type hint;
	file "root.hint";
};

zone "ex" {
	type primary;
	file "ex.db";
};

zone "ex2" {
	type primary;
	file "ex2.db";
};
