options {
	port @PORT@;
	pid-file "named.pid";
	listen-on { 10.53.0.3; };
	listen-on-v6 { none; };
};

key rndc_key {
	secret "1234abcd8765";
	algorithm hmac-sha256;
};

key secondkey {
	secret "abcd1234abcd8765";
	algorithm hmac-sha256;
};

controls {
	inet 10.53.0.3 port @CONTROLPORT@ allow { any; } keys { rndc_key; };
};

view all {
	match-clients { any; };

	recursion no;

	zone "." {
		type hint;
		file "../../common/root.hint";
	};
};

view none {
	match-clients { none; };
};
