include "../../common/rndc.key";

controls {
	inet 10.53.0.1 port @CONTROLPORT@ allow { any; } keys { rndc_key; };
};

options {
	query-source address 10.53.0.1;
	notify-source 10.53.0.1;
	transfer-source 10.53.0.1;
	port @PORT@;
	pid-file "named.pid";
	listen-on { 10.53.0.1; };
	listen-on-v6 { none; };
	recursion no;
	notify yes;
};

zone "." {
	type primary;
	file "root.db";
};

zone "secondary" {
	type primary;
	file "sec.db";
};

zone "edns-expire" {
	type primary;
	file "edns-expire.db";
};

zone "axfr-too-big" {
	type primary;
	file "axfr-too-big.db";
};

zone "ixfr-too-big" {
	type primary;
	allow-update { any; };
	file "ixfr-too-big.db";
};

zone "xfer-stats" {
	type primary;
	file "xfer-stats.db";
};
