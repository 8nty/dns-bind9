options {
	query-source address 10.53.0.2;
	notify-source 10.53.0.2;
	transfer-source 10.53.0.2;
	port @PORT@;
	pid-file "named.pid";
	listen-on { 10.53.0.2; };
	listen-on-v6 { none; };
	recursion no;
	notify yes;
	ixfr-from-differences yes;
	check-integrity no;
	no-case-compress { 10.53.0.2; };
	minimal-responses no;
};

zone "example" {
	type secondary;
	file "example.bk";
	primaries { 10.53.0.1; };
};

zone "dynamic" {
	type secondary;
	file "dynamic.bk";
	primaries { 10.53.0.1; };
};
