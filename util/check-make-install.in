abs_top_srcdir=@abs_top_srcdir@
prefix=@prefix@
includedir=@includedir@

headers_to_install() {
	find "${abs_top_srcdir}/lib" -name "*.h" -or -name "*.h.in" |
		grep -v -F /win32/ |
		grep -v -F include/isc/ipv6.h |
		sed -n \
		    -e "s|\.h\.in$|\.h|" \
		    -e "s|.*include/|${DESTDIR}${includedir}/|p" |
		sort -u
}

status=0

for header in $(headers_to_install); do
	if [ ! -f "${header}" ]; then
		echo "Missing $header"
		status=1
	fi
done

install_dir="${DESTDIR}${prefix}"
named_binary_path="${install_dir}/sbin/named"
named_man_page_path="${install_dir}/share/man/man8/named.8"
if [ ! -e "${named_binary_path}" ] || [ ! -e "${named_man_page_path}" ]; then
	echo "ERROR: File ${named_binary_path} or ${named_man_page_path} does not exist"
	status=1
fi
installed_dirs="${install_dir}/(bin|etc|include|lib|sbin|share)"
destdir_list="$(find "${install_dir}" -maxdepth 1 -mindepth 1 -type d)"
if [ "$(echo "${destdir_list}" | grep -c -x -E "${installed_dirs}")" -ne 6 ]; then
	echo "ERROR: Some of ${installed_dirs} directories were not found in ${install_dir}"
	status=1
fi
if [ -n "${DESTDIR}" ]; then
	if [ "$(echo "${destdir_list}" | grep -v -c -x -E "${installed_dirs}")" -ne 0 ]; then
		echo "ERROR: Directories other than ${installed_dirs} were found in ${install_dir}"
		status=1
	fi
fi

exit $status
